{% extends 'base.html.twig' %}

{% block title %}UpFlix cutre: {{ serie.titulo }}{% endblock %}

{% block content %}
    <div class="container">
        <h1>{{ serie.titulo }}</h1>
        <h5 class="mt-0">Descripción</h5>
        {{ serie.descripcion }}
        <h5 class="mt-0">Año de estreno</h5>
        {{ serie.fechaDeEstreno |date('Y') }}
        <h5>Capitulos</h5>
        <ul>
            {% for capitulo in serie.capitulos %}
                <li>{{ loop.index }} - {{ capitulo.titulo }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
